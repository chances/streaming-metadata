{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "node",
    "lib": ["ES2017", "DOM"],
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "/web_modules/@peculiar/json-schema": [
        "node_modules/@peculiar/json-schema"
      ],
      "/web_modules/*.js": [
        "node_modules/@types/*",
        "node_modules/*",
        "web_modules/*.js"
      ]
    },
    "outDir": "public/js"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
